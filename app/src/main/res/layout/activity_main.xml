<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rayolaser.taskstimer.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

        <EditText
            android:id="@+id/task_name"
            android:layout_width="325dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:autofillHints="task name"
            android:hint="@string/enter_task_name"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="#8D6E63" />

        <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:fadeScrollbars="false">

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/start_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/play_vector"
                    android:drawablePadding="8dp"
                    android:text="@string/start" />

                <Button
                    android:id="@+id/pause_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/pause_vector"
                    android:drawablePadding="8dp"
                    android:text="@string/pause" />

                <Button
                    android:id="@+id/reset_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/restart_vector"
                    android:drawablePadding="8dp"
                    android:text="@string/reset" />

                <Button
                    android:id="@+id/save_task_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/save_vector"
                    android:drawablePadding="8dp"
                    android:text="@string/save" />
            </LinearLayout>
        </HorizontalScrollView>

        <ListView
            android:id="@+id/task_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>